{
  "name": "runner",
  "version": "0.0.1",
  "license": "proprietary",
  "private": true,
  "scripts": {
    "build": "parcel build src/browser.ts --target browser && parcel build src/server.ts --target server",
    "prod-start": "concurrently -n server,browser --kill-others \"node /app/dist/server.js\" \"cypress run --browser chrome /app/dist/browser.js\""
  },
  "dependencies": {
    "@types/node": "^14.0.5",
    "@types/node-fetch": "^2.5.7",
    "concurrently": "^5.2.0",
    "cypress": "^4.6.0",
    "cypress-wait-until": "^1.7.1",
    "node-fetch": "^2.6.0",
    "typescript": "^3.9.3",
    "ws": "^7.3.0"
  },
  "devDependencies": {
    "parcel": "next"
  },
  "targets": {
    "server": {
      "engines": {
        "node": "^12.0.0"
      },
      "outputFormat": "commonjs",
      "includeNodeModules": true,
      "isLibrary": false
    },
    "browser": {
      "includeNodeModules": true,
      "isLibrary": false,
      "outputFormat": "global"
    }
  }
}
