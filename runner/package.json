{
  "name": "@testy/runner",
  "version": "0.0.0",
  "license": "proprietary",
  "private": true,
  "scripts": {
    "build": "esbuild --outdir=dist src/* --platform=node",
    "prod-start": "node -r esm dist/server.js",
    "build:run": "yarn build && yarn prod-start",
    "image:build": "yarn build && docker build -f Dockerfile . -t us.gcr.io/testyx/runner:latest",
    "image:deploy": "docker push us.gcr.io/testyx/runner:latest"
  },
  "dependencies": {
    "@types/puppeteer": "^3.0.0",
    "esm": "^3.2.25",
    "node-fetch": "^2.6.0",
    "puppeteer": "^3.2.0"
  },
  "devDependencies": {
    "@types/node": "^14.0.5",
    "@types/node-fetch": "^2.5.7",
    "esbuild": "^0.4.3",
    "typescript": "^3.9.3"
  },
  "targets": {
    "server": {
      "engines": {
        "node": "^12.0.0"
      },
      "outputFormat": "commonjs",
      "includeNodeModules": true,
      "isLibrary": false
    },
    "browser": {
      "includeNodeModules": true,
      "isLibrary": false,
      "outputFormat": "global"
    }
  }
}
