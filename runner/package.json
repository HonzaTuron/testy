{
  "name": "runner",
  "version": "0.0.1",
  "license": "proprietary",
  "private": true,
  "scripts": {
    "build": "esbuild --outfile=dist/server.js src/server.ts --platform=node --format=cjs --bundle && cp src/steps.json dist && esbuild --outfile=dist/browser.js src/browser.ts",
    "prod-start": "node /app/dist/server.js && cypress run --browser chrome /app/dist/browser.js"
  },
  "dependencies": {
    "concurrently": "^5.2.0",
    "cypress": "^4.6.0",
    "cypress-terminal-report": "^1.3.1",
    "cypress-wait-until": "^1.7.1",
    "node-fetch": "^2.6.0",
    "ws": "^7.3.0"
  },
  "devDependencies": {
    "@types/node": "^14.0.5",
    "@types/node-fetch": "^2.5.7",
    "esbuild": "^0.4.2",
    "typescript": "^3.9.3"
  },
  "targets": {
    "server": {
      "engines": {
        "node": "^12.0.0"
      },
      "outputFormat": "commonjs",
      "includeNodeModules": true,
      "isLibrary": false
    },
    "browser": {
      "includeNodeModules": true,
      "isLibrary": false,
      "outputFormat": "global"
    }
  }
}
